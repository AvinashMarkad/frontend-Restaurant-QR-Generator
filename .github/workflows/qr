# This is a basic workflow for a React app CI/CD pipeline

name: React App CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Checkout repository
      - name: Checkout code
        uses: actions/checkout@v4

      # Setup Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18
          cache: "npm"

      # Install dependencies
      - name: Install dependencies
        run: npm install

      # Run tests
      - name: Run tests
        run: npm test -- --watchAll=false

      # Build React app
      - name: Build project
        run: npm run build

      # Upload build artifacts (optional)
      - name: Upload production-ready build files
        uses: actions/upload-artifact@v4
        with:
          name: react-build
          path: build
